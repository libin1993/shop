<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="12dp">

    <TextView
        android:id="@+id/tv_visit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/visit_time"
        android:textColor="@color/gray_22"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_time_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_visit_time"
        android:layout_toRightOf="@id/tv_visit_time"
        android:textColor="@color/gray_6a"
        android:textSize="14sp"/>


</RelativeLayout>